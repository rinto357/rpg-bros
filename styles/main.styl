@import url('https://fonts.googleapis.com/css?family=Lora|Open+Sans&display=swap')

@import "./colors.styl"


// base layout styles


body
  display flex
  flex-direction column
  margin 0
  padding 0
  box-sizing border-box
  font-family 'Open Sans', sans-serif
  background $black
  color $white

.main-content, .site-header
  box-sizing border-box
  padding .25rem 1rem
  border-radius 10px
  margin 1rem auto
  width 650px
  min-width 50%
  max-width 100vw

header
  margin-top 1rem
  background $charcoal
  padding .5rem


// typographic styles


a
  color $aqua
a:not(:hover)
  text-decoration none
a.router-link-exact-active
  color $white
  text-decoration underline

h1, h2, h3, h4, h5
  font-family 'Lora', serif
  margin-top 3rem

h1
  font-size 2rem
h2
  font-size 1.5rem
h3
  font-size 1.25rem

blockquote
  color $gray
  border-left .25rem solid
  padding 0 .75rem
  margin 0px

// utility classes


.left
  float left

.right
  float right

.clear
  clear both


.auto-center
  margin 0 auto

.text-center
  text-align center

.text-justify
  text-align justify


.cover
  object-fit cover

.contain
  object-fit contain


.full
  width 100%

.half
  width 50%

.third
  width 33%

.quart
  width 25%


.flex
  display flex

.flex.column
  flex-direction column

.flex.even
  justify-content space-evenly

.flex.around
  justify-content space-around

.flex.wrap
  flex-wrap wrap

.grow
  flex-grow 1


.columns
  column-width 300px
  column-fill auto

.columns.double
  column-count 2

.columns.balance
  column-fill balance

.span
  column-span all

.text-center
  text-align center
